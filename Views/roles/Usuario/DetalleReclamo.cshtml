@model SupportWeb.Models.DTOs.ReclamoDto
@{
    ViewData["Title"] = "Detalle del Reclamo";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-0">
                        <i class="fas fa-file-alt me-2"></i>Detalle del Reclamo
                    </h2>
                    <p class="text-muted mb-0">Información completa del reclamo</p>
                </div>
                <div>
                    <a href="@Url.Action("MisReclamos", "Usuario")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Volver a Mis Reclamos
                    </a>
                    @if (Model.Estado == "Nuevo")
                    {
                        <a href="#" class="btn btn-danger" onclick="alert('Funcionalidad próxima a implementar'); return false;">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Reclamo Details -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información del Reclamo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="detalle-reclamo-box">
                                <div class="detalle-item">
                                    <span class="detalle-label">ID:</span>
                                    <span class="detalle-value">@Model.Id</span>
                                </div>
                                <div class="detalle-item">
                                    <span class="detalle-label">Título:</span>
                                    <span class="detalle-value">@Model.Titulo</span>
                                </div>
                                <div class="detalle-item">
                                    <span class="detalle-label">Descripción:</span>
                                    <span class="detalle-value">@Model.Descripcion</span>
                                </div>
                                <div class="detalle-item">
                                    <span class="detalle-label">Estado:</span>
                                    <span class="badge badge-estado">
                                        @Model.Estado
                                    </span>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var estadoSpan = document.querySelector('.badge-estado');
        if (estadoSpan) {
            var estado = estadoSpan.textContent.trim().toLowerCase();
            if (estado === 'nuevo') estadoSpan.classList.add('estado-nuevo');
            else if (estado === 'respondido') estadoSpan.classList.add('estado-respondido');
            else if (estado === 'enproceso' || estado === 'en proceso') estadoSpan.classList.add('estado-enproceso');
            else if (estado === 'cerrado') estadoSpan.classList.add('estado-cerrado');
        }
        var prioridadSpan = document.querySelector('.badge-prioridad');
        if (prioridadSpan) {
            var prioridad = prioridadSpan.textContent.trim().toLowerCase();
            if (prioridad === 'baja') prioridadSpan.classList.add('prioridad-baja');
            else if (prioridad === 'media') prioridadSpan.classList.add('prioridad-media');
            else if (prioridad === 'alta' || prioridad === 'urgente') prioridadSpan.classList.add('prioridad-alta');
        }
    });
</script>
                                </div>
                                <div class="detalle-item">
                                    <span class="detalle-label">Fecha de Creación:</span>
                                    <span class="detalle-value">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                <div class="detalle-item">
                                    <span class="detalle-label">Prioridad:</span>
                                    <span class="badge badge-prioridad">
                                        @Model.Prioridad
                                    </span>
                                </div>
                            </div>
<style>
    .detalle-reclamo-box {
        background: #f8fbff;
        border-radius: 1rem;
        box-shadow: 0 2px 16px #00bfff22;
        padding: 1.5rem 2rem;
        margin: 0.5rem 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        animation: fadeInDetalle 0.8s;
    }
    .detalle-item {
        display: flex;
        align-items: center;
        gap: 1.2rem;
        font-size: 1.1rem;
    }
    .detalle-label {
        font-weight: 600;
        color: #39a2ff;
        min-width: 140px;
        letter-spacing: 0.5px;
    }
    .detalle-value {
        color: #222;
        font-weight: 500;
    }
    .badge-estado {
        color: #fff;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 0.3rem 1rem;
        font-size: 1rem;
        margin-left: 0.5rem;
        box-shadow: 0 2px 8px #0001;
    }
    .estado-nuevo {
        background: #0074d9;
    }
    .estado-respondido {
        background: #00bfff;
    }
    .estado-enproceso {
        background: #ff9800;
    }
    .estado-cerrado {
        background: #888;
    }
    .badge-prioridad {
        color: #fff;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 0.3rem 1rem;
        font-size: 1rem;
        margin-left: 0.5rem;
        box-shadow: 0 2px 8px #0001;
    }
    .prioridad-baja {
        background: #888;
    }
    .prioridad-media {
        background: #ff9800;
    }
    .prioridad-alta {
        background: #e53935;
    }

</style>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

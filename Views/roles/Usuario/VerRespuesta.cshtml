@{
    var respuesta = ViewBag.Respuesta as SupportWeb.Models.DTOs.RespuestaDto;
    var reclamo = ViewBag.Reclamo as SupportWeb.Models.DTOs.ReclamoDto;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary mb-0">
                <i class="bi bi-chat-dots me-2"></i>Respuesta de Soporte
            </h2>
            <p class="text-muted mb-0">A continuación se muestra la última respuesta recibida para tu reclamo.</p>
            <a href="@Url.Action("MisReclamos", "Usuario")" class="btn btn-outline-secondary mt-2">
                <i class="bi bi-arrow-left me-1"></i>Volver a Mis Reclamos
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>@(reclamo?.Titulo ?? "Reclamo")</h5>
        </div>
        <div class="card-body">
            <p><strong>Descripción del reclamo:</strong> @(reclamo?.Descripcion ?? "-")</p>
            <hr />
            <h5 class="text-info"><i class="bi bi-person-check me-2"></i>Respuesta de soporte</h5>
            @if (respuesta != null)
            {
                <div class="respuesta-soporte mb-2">
                    <i class="bi bi-chat-dots-fill me-2"></i>
                    <span class="respuesta-texto">@respuesta.Contenido</span>
                </div>
                <small class="text-muted">Respondido el @respuesta.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
            }  else
            {
                <div class="alert alert-info mt-2 mb-0">
                    <i class="bi bi-info-circle me-2"></i>Este reclamo aún no tiene respuesta de soporte.
                </div>
            }
        </div>
    </div>
</div>
</style>
<style>
    .respuesta-soporte {
        background: linear-gradient(90deg, #00bfff 60%, #39a2ff 100%);
        color: #fff;
        font-size: 1.15rem;
        font-weight: 600;
        border-radius: 0.6rem;
        box-shadow: 0 2px 12px #00bfff44;
        padding: 1rem 1.5rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        animation: pulseSoporte 1.2s infinite alternate;
    }
    .respuesta-soporte i {
        font-size: 1.5rem;
        margin-right: 1rem;
        color: #fff;
        opacity: 0.85;
    }
    .respuesta-texto {
        flex: 1;
        word-break: break-word;
    }

</style>
  

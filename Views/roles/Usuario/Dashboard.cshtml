@model SupportWeb.Models.ViewModels.Usuario.UsuarioDashboardViewModel
@{
    ViewData["Title"] = "Mi Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-3">
    <!-- Encabezado del Dashboard -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        Mi Dashboard
                    </h1>
                    <p class="text-muted mb-0">Bienvenido, <strong>@Model.Usuario.Nombre</strong></p>
                </div>
                <div class="text-end">
                    <span class="badge bg-primary fs-6">@Model.Usuario.Rol</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas Rápidas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total de Reclamos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalReclamos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clipboard-data fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                En Proceso
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ReclamosEnProceso</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clock-history fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Resueltos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ReclamosResueltos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Nuevos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ReclamosNuevos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-plus-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Panel Principal -->
        <div class="col-xl-8 col-lg-7">
            <!-- Acciones Rápidas -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-lightning-charge me-2"></i>Acciones Rápidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Usuario" asp-action="CrearReclamo" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle me-2"></i>
                                Nuevo Reclamo
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Usuario" asp-action="MisReclamos" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-list-ul me-2"></i>
                                Mis Reclamos
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Usuario" asp-action="MiPerfil" class="btn btn-outline-info w-100">
                                <i class="bi bi-person me-2"></i>
                                Mi Perfil
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reclamos Recientes -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-clock-history me-2"></i>Mis Reclamos Recientes
                    </h6>
                    <a asp-controller="Usuario" asp-action="MisReclamos" class="btn btn-sm btn-outline-primary">
                        Ver Todos
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.ReclamosRecientes != null && Model.ReclamosRecientes.Any())
                    {
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Título</th>
                <th>Estado</th>
                <th>Prioridad</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reclamo in Model.ReclamosRecientes)
            {
                <tr>
                    <td>@reclamo.Titulo</td>
                    <td>
                        <span class="badge @(reclamo.Estado == "Respondido" ? "badge-respondido-celeste" :
                            reclamo.Estado == "Nuevo" ? "bg-info" :
                            reclamo.Estado == "EnProceso" ? "bg-warning" :
                            reclamo.Estado == "Resuelto" ? "bg-success" : "bg-secondary")">
                                @reclamo.Estado
                        </span>
                    </td>
                    <td>
                        <span class="badge bg-@(reclamo.Prioridad == "Alta" ? "danger" :
                                              reclamo.Prioridad == "Media" ? "warning" : "secondary")">
                            @reclamo.Prioridad
                        </span>
                    </td>
                    <td>@reclamo.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-controller="Usuario" asp-action="DetalleReclamo" asp-route-id="@reclamo.Id"
                           class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <style>
            .badge-respondido-celeste {
                background: #f5f5f5;
                color: #333;
                font-weight: bold;
                box-shadow: 0 0 8px #cccccc66;
                border: 1px solid #e0e0e0;
            }
    </style>
</div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="mt-3 text-muted">No tienes reclamos aún</h5>
                            <p class="text-muted">¿Necesitas ayuda? Crea tu primer reclamo.</p>
                            <a asp-controller="Usuario" asp-action="CrearReclamo" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Crear Reclamo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Panel Lateral -->
        <div class="col-xl-4 col-lg-5">
            <!-- Notificaciones -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-bell me-2"></i>Notificaciones
                    </h6>
                    <a href="/Usuario/Notificaciones" class="text-white">
                        <small>Ver todas</small>
                    </a>
                </div>
                <div class="card-body" id="notificaciones-preview">
                    <!-- Notificaciones ficticias siempre visibles -->
                    <div class="d-flex align-items-center mb-2 p-2 bg-primary-subtle rounded">
                        <div class="flex-grow-1">
                            <div class="small font-weight-bold">Nuevo reclamo recibido</div>
                            <div class="small text-muted">Se ha registrado un nuevo reclamo en tu cuenta.</div>
                        </div>
                        <div class="ms-2"><span class="badge bg-primary">Nueva</span></div>
                    </div>
                    <div class="d-flex align-items-center mb-2 p-2 bg-primary-subtle rounded">
                        <div class="flex-grow-1">
                            <div class="small font-weight-bold">Reclamo actualizado</div>
                            <div class="small text-muted">Uno de tus reclamos ha sido actualizado por el equipo de soporte.</div>
                        </div>
                        <div class="ms-2"><span class="badge bg-primary">Nueva</span></div>
                    </div>
                    <div class="d-flex align-items-center mb-2 p-2 bg-primary-subtle rounded">
                        <div class="flex-grow-1">
                            <div class="small font-weight-bold">Respuesta pendiente</div>
                            <div class="small text-muted">Tienes una respuesta pendiente en uno de tus reclamos.</div>
                        </div>
                        <div class="ms-2"><span class="badge bg-primary">Nueva</span></div>
                    </div>
                </div>
            </div>

            <!-- Estado del Sistema -->
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-shield-check me-2"></i>Estado del Sistema
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <i class="bi bi-circle-fill text-success"></i>
                        </div>
                        <div>
                            <div class="small font-weight-bold">Sistema Operativo</div>
                            <div class="small text-muted">Todos los servicios funcionando correctamente</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <i class="bi bi-circle-fill text-success"></i>
                        </div>
                        <div>
                            <div class="small font-weight-bold">API Conectada</div>
                            <div class="small text-muted">Conectado al servidor de reclamos</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-circle-fill text-success"></i>
                        </div>
                        <div>
                            <div class="small font-weight-bold">Base de Datos</div>
                            <div class="small text-muted">Operaciones normales</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configuración Rápida -->
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-gear me-2"></i>Configuración
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Usuario" asp-action="MiPerfil" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-person me-2"></i>Mi Perfil
                        </a>
                        <a asp-controller="Usuario" asp-action="Configuracion" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-gear me-2"></i>Configuración
                        </a>
                        <hr>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


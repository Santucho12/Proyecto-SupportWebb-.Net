                            }
                            else if (userRole == "Soporte")
                            {
                                <li><a class="dropdown-item" asp-controller="Soporte" asp-action="Configuracion"><i class="bi bi-gear me-2"></i>Configuración</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Configuracion"><i class="bi bi-gear me-2"></i>Configuración</a></li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid px-4 py-3">

        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-5 py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">&copy; 2025 SupportWeb - Sistema de Gestión de Reclamos</span>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted">Desarrollado por Santiago Segal</span>

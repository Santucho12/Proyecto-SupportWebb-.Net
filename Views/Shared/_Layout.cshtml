    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_layout-custom.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <script>
        function applyDarkModeGlobal(isDark) {
            if (isDark) {
                document.body.classList.add('dark-theme');
                document.documentElement.classList.add('dark-theme');
            } else {
                document.body.classList.remove('dark-theme');
                document.documentElement.classList.remove('dark-theme');
            }
        }
        // Inicializa el modo oscuro al cargar
        applyDarkModeGlobal(localStorage.getItem('darkMode') === 'true');
        // Escucha cambios en localStorage desde cualquier vista
        window.addEventListener('storage', function(e) {
            if (e.key === 'darkMode') {
                applyDarkModeGlobal(e.newValue === 'true');
            }
        });
        // Detecta el cambio del switch #darkMode en cualquier vista
        document.addEventListener('DOMContentLoaded', function() {
            var darkModeCheckbox = document.getElementById('darkMode');
            if (darkModeCheckbox) {
                darkModeCheckbox.addEventListener('change', function() {
                    localStorage.setItem('darkMode', this.checked);
                    applyDarkModeGlobal(this.checked);
                });
            }
        });
    </script>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">

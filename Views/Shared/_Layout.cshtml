                                    }
                                    else if (userRole == "Usuario")
                                    {
                                        <li><a class="dropdown-item text-center" href="/Usuario/Notificaciones"><i class="bi bi-eye me-2"></i>Ver todas</a></li>
                                    }
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>
                            <span id="user-name">Usuario</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (userRole == "Usuario")
                            {
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="MiPerfil"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                            }
                            else if (userRole == "Soporte")
                            {
                                <li><a class="dropdown-item" asp-controller="Soporte" asp-action="MiPerfil"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="MiPerfil"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                            }
                            @if (userRole == "Usuario")
                            {

                            @{
                                var cantidad = (Model != null && Model.GetType().GetProperty("CantidadNotificaciones") != null) ? (int?)Model.CantidadNotificaciones : null;
                            }
                            @if (cantidad.HasValue && cantidad.Value > 0)
                            {
                                <span class="badge bg-danger rounded-pill ms-1" id="notification-count">@cantidad.Value</span>
                            }
